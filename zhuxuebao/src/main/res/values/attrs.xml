<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="InputTextView">
        <attr name="label_width" format="dimension" />
        <attr name="label_text" format="string" />
        <attr name="edit_hint" format="string" />
        <attr name="post_key" format="string" />
        <attr name="match_regex" format="string" />
        <attr name="edit_regex" format="string" />
        <attr name="pick_type" format="string" />
        <attr name="error_hint" format="string" />
        <attr name="android:inputType"/>
        <attr name="not_null" format="boolean" />
        <attr name="input_right_drawable" format="reference"/>
        <attr name="show_not_null" format="boolean" />
    </declare-styleable>

    <declare-styleable name="UploadImageView">
        <attr name="img_post_key" format="string" />
        <attr name="img_not_null" format="boolean" />
        <attr name="img_label_text" format="string" />
    </declare-styleable>

    <declare-styleable name="InfoTextView">
        <attr name="info_left_drawable" format="reference" />
        <attr name="info_label_text" format="string" />
        <attr name="content_text" format="string" />
    </declare-styleable>

</resources>