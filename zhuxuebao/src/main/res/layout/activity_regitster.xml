<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bb="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="handler"
            type="com.wazxb.zhuxuebao.moudles.account.RegitsterActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/view_default_bg"
        android:orientation="vertical">

        <com.zxzx74147.devlib.widget.TitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_gap_110"
            bb:right_text="@string/next_step"
            bb:text="@string/register" />

        <com.zxzx74147.devlib.widget.tabhost.FragmentTabHost
            android:id="@+id/tab_host"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            bb:dividerColor="@color/maintab_divider"
            bb:scrollable="false"
            bb:smoothScroll="true"
            bb:tabHeight="0px"
            bb:tabPosition="top"
            bb:tabWigetBackground="@color/white" />
    </LinearLayout>
</layout>