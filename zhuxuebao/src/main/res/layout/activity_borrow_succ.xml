<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="handler"
            type="com.wazxb.xuerongbao.moudles.borrow.BorrowSuccActivity" />


    </data>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.zxzx74147.devlib.widget.TitleBar
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_gap_110"
            app:text="@string/borrow_succ" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_gap_200"
            android:src="@drawable/loan_succ" />

        <TextView
            android:layout_width="@dimen/default_gap_300"
            android:text="@string/borrow_succ_remind"
            android:layout_marginTop="@dimen/default_gap_50"
            android:textColor="@color/text_color_grey"
            android:textSize="@dimen/default_size_28"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content" />

    </LinearLayout>
</layout>