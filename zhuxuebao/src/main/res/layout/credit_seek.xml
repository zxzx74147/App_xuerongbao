<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/credit"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/default_gap_45"
        android:background="@drawable/credit_cell"
        android:gravity="center"
        android:paddingBottom="@dimen/default_gap_10"
        android:text="0"
        android:textColor="@color/orange"
        android:textSize="@dimen/default_size_24" />

    <View
        android:layout_width="@dimen/default_gap_3"
        android:layout_height="@dimen/default_gap_6"
        android:layout_marginTop="@dimen/default_gap_4"
        android:background="@color/text_color_grey" />
</LinearLayout>