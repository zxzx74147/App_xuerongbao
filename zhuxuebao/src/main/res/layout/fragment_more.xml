<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="handler"
            type="com.wazxb.zhuxuebao.moudles.more.MoreFragment" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/view_default_bg_grey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.zxzx74147.devlib.widget.TitleBar
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_gap_110"
                app:showBack="false"
                app:text="@string/moudle_more" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/white"
                android:layout_marginTop="@dimen/default_gap_20"
                android:src="@color/info_divider" />

            <com.wazxb.zhuxuebao.widget.InfoTextView
                android:id="@+id/about_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{handler.onAboutClick}"
                app:info_label_text="@string/about_us" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/white"
                android:paddingLeft="@dimen/default_gap_30"
                android:src="@color/info_divider" />

            <com.wazxb.zhuxuebao.widget.InfoTextView
                android:id="@+id/feedback_id"
                android:layout_width="match_parent"
                android:onClick="@{handler.onFeedBackClick}"
                android:layout_height="wrap_content"
                app:info_label_text="@string/feedback" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/white"
                android:paddingLeft="@dimen/default_gap_30"
                android:src="@color/info_divider" />

            <com.wazxb.zhuxuebao.widget.InfoTextView
                android:id="@+id/contact_us_id"
                android:onClick="@{handler.onContractClick}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:info_label_text="@string/contact_us" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/white"
                android:src="@color/info_divider" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/white"
                android:layout_marginTop="@dimen/default_gap_20"
                android:src="@color/info_divider" />

            <com.wazxb.zhuxuebao.widget.InfoTextView
                android:id="@+id/update_id"
                android:layout_width="match_parent"
                android:onClick="@{handler.onUpdateClick}"
                android:layout_height="wrap_content"
                app:info_label_text="@string/update_version" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/white"
                android:paddingLeft="@dimen/default_gap_30"
                android:src="@color/info_divider" />

            <com.wazxb.zhuxuebao.widget.InfoTextView
                android:id="@+id/clear_cache_id"
                android:onClick="@{handler.onClearCacheClick}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:info_label_text="@string/clear_cache" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/white"
                android:src="@color/info_divider" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/default_gap_20"
                android:background="@color/white"
                android:src="@color/info_divider" />

            <com.wazxb.zhuxuebao.widget.InfoTextView
                android:id="@+id/green_hand_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{handler.onGreenHandClick}"
                app:info_label_text="@string/green_hand" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/white"
                android:paddingLeft="@dimen/default_gap_30"
                android:src="@color/info_divider" />

            <com.wazxb.zhuxuebao.widget.InfoTextView
                android:id="@+id/help_id"
                android:layout_width="match_parent"
                android:onClick="@{handler.onHelpClick}"
                android:layout_height="wrap_content"
                app:info_label_text="@string/help" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/white"
                android:src="@color/info_divider" />

        </LinearLayout>
    </ScrollView>
</layout>