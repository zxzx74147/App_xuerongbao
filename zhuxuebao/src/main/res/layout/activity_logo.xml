<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wazxb.xuerongbao.moudles.LogoActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_gap_300"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/default_gap_40"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/init_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/slogen"
                android:textColor="@color/text_color_dark_black"
                android:textSize="@dimen/default_gap_40" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/default_gap_20"
            android:layout_height="wrap_content"
            android:text="@string/xxxx"
            android:textColor="@color/text_color_grey"
            android:textSize="@dimen/default_gap_28" />
    </LinearLayout>
</RelativeLayout>
